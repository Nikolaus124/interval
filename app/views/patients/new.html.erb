<!doctype html>
<html lang="en">
<head>

  <% @title = "New Patient" %>

</head>
<body>
  <h2>New Patient</h2>

  <% if @patient.errors.any? %>
  <div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
      <% @patient.errors.full_messages.each do |message|%>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= form_for @patient do |f|%>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

  <%= f.submit 'Save' %>
  <% end %>

  <%= link_to "Back", "/" %>

</body>
</html>